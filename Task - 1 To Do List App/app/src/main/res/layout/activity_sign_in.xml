<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".SignIn"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:id="@+id/textView"
        android:layout_width="596dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="100dp"
        android:text="Welcome , \nSign In to continue"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- TextInputLayout and TextInputEditText for input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:hintTextColor="@color/yellow"
        app:startIconDrawable="@drawable/baseline_verified_user_24">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Create a unique username"
            android:id="@+id/etu"
            android:paddingStart="50dp"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:backgroundTint="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="Need an account? Click to Sign Up" />
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="Forget Password" />


</LinearLayout>